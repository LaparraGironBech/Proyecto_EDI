@model Proyecto_EDI.Models.Lista<Paciente>

@{
    ViewData["Title"] = "Simulator";
    string[] Dates = new string[8] { "Nombre", "Apellido", "DPI", "Departamento", "Municipio", "Edad", "Grupo de prioridad", "Estado de vacunación" };
}


<!-- Tabla para mostrar-->
<h1>Lista de pacientes en espera</h1>
@if (Model.Cantidad != 0)
{
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>
                    @Dates[0]
                </th>
                <th>
                    @Dates[1]
                </th>
                <th>
                    @Dates[2]
                </th>
                <th>
                    @Dates[3]
                </th>
                <th>
                    @Dates[4]
                </th>
                <th>
                    @Dates[5]
                </th>
                <th>
                    @Dates[6]
                </th>
                <th>
                    @Dates[7]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Cantidad; i++)
            {
                <tr>
                    <td>
                        @Model.ObtenerPos(i).Data.nombre
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.apellido
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.departamentoString
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.municipioString
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.dpi
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.edad
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.prioString
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.vacunado
                    </td>

                </tr>
            }

            


        </tbody>
    </table>
}


