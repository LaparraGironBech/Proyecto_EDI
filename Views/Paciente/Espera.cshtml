@model Proyecto_EDI.Models.Lista<Paciente>

@{
    ViewData["Title"] = "Simulator";
    string[] Dates = new string[8] { "Nombre", "Apellido", "DPI", "Departamento", "Municipio", "Edad", "Grupo de prioridad", "Estado de vacunación" };
}


<!-- Tabla para mostrar-->
<h1>PACIENTES EN ESPERA <br />VACUNACIÓN COVID-19</h1>
<p>
    <a asp-controller="Home" asp-action="Index">Menú principal</a><br />
    <a asp-action="MenuReporte">Regresar</a>
</p>
@if (Model.Cantidad != 0)
{
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>
                    @Dates[0]
                </th>
                <th>
                    @Dates[1]
                </th>
                <th>
                    @Dates[2]
                </th>
                <th>
                    @Dates[3]
                </th>
                <th>
                    @Dates[4]
                </th>
                <th>
                    @Dates[5]
                </th>
                <th>
                    @Dates[6]
                </th>
                <th>
                    @Dates[7]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Cantidad; i++)
            {
                <tr>
                    <td>
                        @Model.ObtenerPos(i).Data.nombre
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.apellido
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.departamentoString
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.municipioString
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.dpi
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.edad
                    </td>
                    <td>
                        @Model.ObtenerPos(i).Data.prioString
                    </td>
                    <td>
                        
                        @{
                            if (Model.ObtenerPos(i).Data.vacunado == true)
                            {
                                <label style="color:blue;">Vacunado</label>
                            }
                            else
                            {
                                <label style="color:red;">En espera</label>
                            }
                        }
                    </td>

                </tr>
            }

            


        </tbody>
    </table>
}


    </td>
</tr>
    </table>